{
    "name": "m-adamski/symfony-mailer-bundle",
    "description": "Bundle for Symfony 4 which helps compose and send emails",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Maciej Adamski",
            "email": "m.adamski@ideacode.pl"
        }
    ],
    "require": {
        "php": "^7.1",
        "symfony/framework-bundle": "^3.4|^4.1",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/twig-bundle": "^3.4|^4.1"
    },
    "require-dev": {
        "kint-php/kint": "^3.0",
        "phpunit/phpunit": "^7.4",
        "symfony/phpunit-bridge": "^4.1"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Adamski\\Symfony\\MailerBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adamski\\Symfony\\MailerBundleTests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
