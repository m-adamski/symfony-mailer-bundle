{
    "name": "m-adamski/symfony-mailer-bundle",
    "description": "Bundle for Symfony which helps compose and send emails",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Maciej Adamski",
            "email": "m.adamski@ideacode.pl"
        }
    ],
    "require": {
        "php": "^7.2",
        "symfony/framework-bundle": "^4.1|^5.0",
        "symfony/swiftmailer-bundle": "^3.4",
        "symfony/twig-bundle": "^4.1|^5.0"
    },
    "require-dev": {
        "kint-php/kint": "^3.0",
        "symfony/phpunit-bridge": "^4.1|^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Adamski\\Symfony\\MailerBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adamski\\Symfony\\MailerBundleTests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
